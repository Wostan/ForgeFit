<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForgeFit.MAUI.Views.DesignSystemPageView">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Label Text="ForgeFit UI Kit"
                   Style="{StaticResource Headline}"
                   HorizontalOptions="Start" />

            <BoxView HeightRequest="1" Color="{StaticResource BorderColor}" />

            <VerticalStackLayout Spacing="10">
                <Label Text="1. Typography" Style="{StaticResource LabelH1}" TextColor="{StaticResource Primary}" />

                <Label Text="Headline (H1) - Montserrat Bold 32" Style="{StaticResource Headline}"
                       HorizontalOptions="Start" />
                <Label Text="SubHeadline - Montserrat 24" Style="{StaticResource SubHeadline}"
                       HorizontalOptions="Start" />
                <Label Text="Header 1 (Custom) - Semibold 24" Style="{StaticResource LabelH1}" />
                <Label Text="Header 2 (Custom) - Semibold 20" Style="{StaticResource LabelH2}" />
                <Label
                    Text="Body Text - Regular 14. Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                    Style="{StaticResource LabelBody}" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="15">
                <Label Text="2. Buttons" Style="{StaticResource LabelH1}" TextColor="{StaticResource Primary}" />

                <Button Text="Primary Button" />

                <Button Text="Secondary Button"
                        Style="{StaticResource SecondaryButton}" />

                <Button Text="Disabled Button"
                        IsEnabled="False" />

                <Button Text="Text Button / Link"
                        Style="{StaticResource TextButton}" />

                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Button Grid.Column="0" Text="Small" HeightRequest="40" />
                    <Button Grid.Column="1" Text="Icon Btn" ImageSource="dotnet_bot.png" ContentLayout="Right,10" />
                </Grid>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="15">
                <Label Text="3. Inputs &amp; Forms" Style="{StaticResource LabelH1}"
                       TextColor="{StaticResource Primary}" />

                <Label Text="Standard Entry (Transparent)" Style="{StaticResource LabelH2}" />
                <Entry Placeholder="Type something..." />

                <Label Text="Premium Input Wrapper" Style="{StaticResource LabelH2}" />
                <Border Style="{StaticResource InputWrapper}">
                    <Entry Placeholder="Email Address" Keyboard="Email" />
                </Border>

                <Border Style="{StaticResource InputWrapper}">
                    <Entry Placeholder="Password" IsPassword="True" />
                </Border>

                <Label Text="Editor (Multi-line)" Style="{StaticResource LabelH2}" />
                <Border Style="{StaticResource InputWrapper}" HeightRequest="100">
                    <Editor Placeholder="Describe your workout..." AutoSize="TextChanges" />
                </Border>

                <Label Text="Search Bar" Style="{StaticResource LabelH2}" />
                <SearchBar Placeholder="Search exercises..." />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="15">
                <Label Text="4. Selection Controls" Style="{StaticResource LabelH1}"
                       TextColor="{StaticResource Primary}" />

                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <CheckBox IsChecked="True" Color="{StaticResource Primary}" />
                    <Label Text="Checkbox Active" VerticalOptions="Center" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <CheckBox IsChecked="False" />
                    <Label Text="Checkbox Inactive" VerticalOptions="Center" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Switch IsToggled="True" />
                    <Label Text="Switch Active" VerticalOptions="Center" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Switch IsToggled="False" />
                    <Label Text="Switch Inactive" VerticalOptions="Center" />
                </HorizontalStackLayout>

                <Label Text="Slider" Style="{StaticResource LabelH2}" />
                <Slider Minimum="0" Maximum="100" Value="50" />

                <Label Text="Picker" Style="{StaticResource LabelH2}" />
                <Border Style="{StaticResource InputWrapper}">
                    <Picker Title="Select your goal">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Lose Weight</x:String>
                                <x:String>Build Muscle</x:String>
                                <x:String>Keep Fit</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Border>

                <Label Text="Date &amp; Time" Style="{StaticResource LabelH2}" />
                <Border Style="{StaticResource InputWrapper}">
                    <DatePicker />
                </Border>
                <Border Style="{StaticResource InputWrapper}">
                    <TimePicker />
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="15">
                <Label Text="5. Cards &amp; Feedback" Style="{StaticResource LabelH1}"
                       TextColor="{StaticResource Primary}" />

                <Label Text="Activity Indicator" Style="{StaticResource LabelH2}" />
                <ActivityIndicator IsRunning="True" Color="{StaticResource Primary}" HorizontalOptions="Center" />

                <Label Text="Progress Bar" Style="{StaticResource LabelH2}" />
                <ProgressBar Progress="0.7" ProgressColor="{StaticResource Primary}" />

                <Label Text="Card Example" Style="{StaticResource LabelH2}" />

                <Border Style="{StaticResource CardStyle}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Workout Plan" FontSize="18" FontAttributes="Bold"
                               TextColor="{StaticResource Primary}" />
                        <Label Text="Push Day - Chest &amp; Triceps" FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark=White}" />
                        <Button Text="Start" HeightRequest="40" Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>

            <BoxView HeightRequest="50" Color="Transparent" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

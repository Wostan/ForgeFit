<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="ForgeFit.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ForgeFit.MAUI.Views"
    xmlns:strings="clr-namespace:ForgeFit.MAUI.Resources.Strings"
    Title="ForgeFit.MAUI">

    <TabBar>
        <Tab Title="{x:Static strings:AppResources.DiaryPageTitle}">
            <ShellContent
                ContentTemplate="{DataTemplate views:DiaryPageView}"
                Route="DiaryPageView" />
        </Tab>

        <Tab Title="{x:Static strings:AppResources.WorkoutPageTitle}">
            <ShellContent
                ContentTemplate="{DataTemplate views:WorkoutPageView}"
                Route="WorkoutPageView" />
        </Tab>

        <Tab Title="{x:Static strings:AppResources.ProfilePageTitle}">
            <ShellContent
                ContentTemplate="{DataTemplate views:ProfilePageView}"
                Route="ProfilePageView" />
        </Tab>
    </TabBar>

</Shell>

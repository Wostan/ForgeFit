<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="ForgeFit.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ForgeFit.MAUI.Views"
    xmlns:strings="clr-namespace:ForgeFit.MAUI.Resources.Strings"
    FlyoutBehavior="Disabled"
    Title="ForgeFit"
    Shell.TabBarBackgroundColor="{StaticResource Surface}"
    Shell.TabBarTitleColor="{StaticResource Primary}"
    Shell.TabBarUnselectedColor="{StaticResource TextSecondary}"
    Shell.TabBarForegroundColor="{StaticResource Primary}">

    <TabBar>
        <Tab Title="{x:Static strings:AppResources.DiaryPageTitle}">
            <ShellContent
                Content="{views:DiaryPageView}"
                Route="DiaryPageView" />
        </Tab>

        <Tab Title="{x:Static strings:AppResources.WorkoutPageTitle}">
            <ShellContent
                Content="{views:WorkoutPageView}"
                Route="WorkoutPageView" />
        </Tab>

        <Tab Title="{x:Static strings:AppResources.ProfilePageTitle}">
            <ShellContent
                Content="{views:ProfilePageView}"
                Route="ProfilePageView" />
        </Tab>

        <Tab Title="UI">
            <ShellContent
                Content="{views:DesignSystemPageView}"
                Route="DesignSystemPageView" />
        </Tab>
    </TabBar>

</Shell>
{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Secret": "OVERRIDE_SECRET",
    "Issuer": "ForgeFitApi",
    "Audience": "ForgeFitClient",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 31
  },
  "FoodApiSettings": {
    "BaseUrl": "https://platform.fatsecret.com/rest/server.api/",
    "TokenUrl": "https://oauth.fatsecret.com/connect/token/",
    "ClientId": "OVERRIDE_CLIENT_ID",
    "ClientSecret": "OVERRIDE_CLIENT_SECRET",
    "Scope": "basic",
    "Region": "UA",
    "Language": "ua"
  },
  "ExerciseDbApiSettings": {
    "BaseUrl": "https://oss.exercisedb.dev/api/v1/"
  }
}
